{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@include": ["./src/include"],
			"@include/*": ["./src/include/*"],
			"@module": ["./src/module"],
			"@module/*": ["./src/module/*"],
			"@component": ["./src/_component"],
			"@component/*": ["./src/_component/*"],
			"@redux": ["./src/redux"],
			"@redux/*": ["./src/redux/*"],
			"@reducers": ["./src/redux/reducers"],
			"@reducers/*": ["./src/redux/reducers/*"],
			"@hooks": ["./src/hooks"],
			"@hooks/*": ["./src/hooks/*"],
			"@design": ["./src/design_system"],
			"@design/*": ["./src/design_system/*"],
			"@": ["./src"],
			"@/*": ["./src/*"]
		}
	}
}
